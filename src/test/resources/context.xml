<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:security="http://www.springframework.org/schema/security"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:task="http://www.springframework.org/schema/task"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
              http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
              http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd
              http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.2.xsd">

	<context:annotation-config></context:annotation-config>
	
	<bean id="kryptnosticConnection" class="com.kryptnostic.api.v1.client.DefaultKryptnosticConnection" />
	
	<bean id="kryptnosticServicesFactory" class="com.kryptnostic.mock.services.MockKryptnosticServicesFactory" />	
	
	<bean id="storageService" factory-bean="kryptnosticServicesFactory"  factory-method="createStorageService" />
	
	<bean id="searchService" factory-bean ="kryptnosticServicesFactory" factory-method="createSearchService" />
	
	<bean id="indexingService" factory-bean ="kryptnosticServicesFactory" factory-method="createIndexingService" />
	
	<bean id="metadataKeyService" factory-bean ="kryptnosticServicesFactory" factory-method="createMetadataKeyService" />
	
</beans>